{
  "name": "uf1",
  "productName": "Ultimate-F1Viewer-With-F1MV",
  "version": "2.0.0",
  "description": "A integration with multiple windows to enchance your F1TV experience using the MultiViewer for F1 app.",
  "main": "./out/main/index.js",
  "author": "MR. AJEKO",
  "homepage": "https://github.com/MRAJEKO/UF1-Viewer-with-F1MV",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "electron-vite build && electron-builder --mac --config",
    "build:linux": "electron-vite build && electron-builder --linux --config"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^1.0.3",
    "@electron-toolkit/utils": "^1.0.2",
    "@nivo/bullet": "^0.83.0",
    "@nivo/line": "^0.83.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.3.0",
    "govee-lan-control": "^3.0.0",
    "localforage": "^1.10.0",
    "match-sorter": "^6.3.1",
    "npm_f1mv_api": "^1.4.8",
    "react-router-dom": "^6.9.0",
    "react-transition-group": "^4.4.5",
    "sass": "^1.63.4",
    "sort-by": "^0.0.2"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/notarize": "^1.2.3",
    "@types/node": "16.18.14",
    "@types/node-fetch": "^2.6.4",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.10",
    "@types/react-transition-group": "^4.4.6",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "@vitejs/plugin-react": "^3.1.0",
    "electron": "^22.3.2",
    "electron-builder": "^24.3.0",
    "electron-vite": "^1.0.20",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "prettier": "^2.8.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^4.9.5",
    "vite": "^4.1.4"
  }
}
